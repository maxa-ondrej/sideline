{
  "name": "@sideline/server",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The server template",
  "repository": {
    "type": "git",
    "url": "<PLACEHOLDER>",
    "directory": "applications/server"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "preview": "node build/esm/run.js",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/platform": "latest",
    "@t3-oss/env-core": "^0.13.8",
    "@effect/platform-node": "latest",
    "@effect/sql": "latest",
    "@effect/sql-pg": "latest",
    "@sideline/domain": "workspace:^",
    "@sideline/migrations": "workspace:^",
    "arctic": "^3.7.0",
    "dfx": "latest",
    "effect": "latest"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
