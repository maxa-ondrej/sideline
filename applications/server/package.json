{
  "name": "@sideline/server",
  "private": true,
  "version": "0.1.6",
  "type": "module",
  "license": "MIT",
  "description": "The server template",
  "repository": {
    "type": "git",
    "url": "<PLACEHOLDER>",
    "directory": "applications/server"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "dev": "tsx watch src/run.ts",
    "preview": "node build/esm/run.js",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/platform": "0.94.5",
    "@effect/platform-node": "0.104.1",
    "@effect/sql": "0.49.0",
    "@effect/sql-pg": "0.50.3",
    "@sideline/domain": "workspace:^",
    "@sideline/effect-lib": "workspace:^",
    "@sideline/migrations": "workspace:^",
    "@t3-oss/env-core": "^0.13.8",
    "arctic": "^3.7.0",
    "dfx": "0.127.0",
    "effect": "3.19.18"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
