{
  "name": "@sideline/bot",
  "private": true,
  "version": "0.1.7",
  "type": "module",
  "license": "MIT",
  "description": "Discord bot for Sideline",
  "repository": {
    "type": "git",
    "url": "<PLACEHOLDER>",
    "directory": "applications/bot"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "tsx watch src/run.ts",
    "preview": "node build/esm/run.js",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/platform": "0.94.5",
    "@effect/platform-node": "0.104.1",
    "@effect/rpc": "0.73.0",
    "@t3-oss/env-core": "^0.13.8",
    "@sideline/domain": "workspace:^",
    "@sideline/effect-lib": "workspace:^",
    "dfx": "0.127.0",
    "discord-api-types": "0.38.39",
    "effect": "3.19.18"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
