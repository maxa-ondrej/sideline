{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "codegen": "pnpm --recursive --parallel run codegen && biome check --write packages/*/src/index.ts applications/*/src/index.ts",
    "dev": "pnpm --parallel dev",
    "build": "pnpm --parallel --filter './packages/**' build && pnpm --parallel --filter './applications/**' build",
    "check": "tsc -b tsconfig.json",
    "lint": "biome check .",
    "format": "biome check --write --unsafe .",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && TEST_DIST= pnpm vitest && changeset publish",
    "db:up": "docker compose -f docker-compose.db.yaml up -d postgres",
    "db:down": "docker compose -f docker-compose.db.yaml down",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,json,css}": "biome check --write --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@babel/cli": "7.28.6",
    "@babel/core": "7.29.0",
    "@babel/plugin-transform-export-namespace-from": "7.27.1",
    "@babel/plugin-transform-modules-commonjs": "7.28.6",
    "@biomejs/biome": "2.4.2",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@changesets/get-github-info": "0.6.0",
    "@effect/build-utils": "0.7.9",
    "@effect/language-service": "0.74.0",
    "@effect/vitest": "0.27.0",
    "@types/node": "22.19.11",
    "babel-plugin-annotate-pure-calls": "0.5.0",
    "effect": "3.19.18",
    "glob": "^11.1.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "tsc-watch": "^6.3.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "@changesets/get-github-info@0.6.0": "patches/@changesets__get-github-info@0.6.0.patch",
      "@changesets/assemble-release-plan@6.0.9": "patches/@changesets__assemble-release-plan@6.0.9.patch"
    }
  }
}
